<%= form_with model: todo, html: { autocomplete: "off" } do |form| %>

  <table class="todoTable">
    <tr>
      <td><%= form.label :name %></td>
      <td><%= form.text_field :name %></td>
    </tr>
    <tr>
      <td><%= form.label :description %></td>
      <td><%= form.text_field :description %></td>
    </tr>
  </table>

  <% todo.errors.full_messages_for(:name).each do |message| %>
    <div class="error" ><%= message %></div>
  <% end %>

  <% todo.errors.full_messages_for(:description).each do |message| %>
    <div class="error"><%= message %></div>
  <% end %>


  <div>
    <%= form.submit 'Create',  class: 'createTodoBtn' %>
  </div>
<% end %>
